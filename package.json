{
  "name": "marketerx-chat-backend",
  "version": "1.0.0",
  "description": "MarketerX Two-Tier AI Chat System with LangGraph",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run check-imports && tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "check-imports": "node scripts/check-imports.js",
    "langsmith:check": "tsx scripts/check-langsmith-config.ts",
    "langsmith:test": "tsx scripts/test-langsmith-connection.ts"
  },
  "keywords": [
    "marketerx",
    "ai",
    "chat",
    "langgraph",
    "anthropic"
  ],
  "author": "MarketerX Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@fastify/cors": "^11.2.0",
    "@langchain/anthropic": "^0.3.7",
    "@langchain/community": "^0.3.14",
    "@langchain/core": "^0.3.21",
    "@langchain/langgraph": "^0.2.19",
    "@langchain/openai": "^0.3.12",
    "@supabase/supabase-js": "^2.47.10",
    "@tavily/core": "^0.6.4",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.2",
    "langsmith": "^0.4.9",
    "openai": "^4.77.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
